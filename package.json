{
    "name": "up-csi",
    "version": "0.0.0",
    "description": "The official website for UP CSI.",
    "type": "module",
    "packageManager": "pnpm@8.7.1",
    "source": "src/index.html",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "sync": "svelte-kit sync",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "pnpm check --watch",
        "fmt": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --check .",
        "fmt:fix": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --write .",
        "lint": "pnpm lint:html && pnpm lint:css && pnpm lint:js",
        "lint:html": "linthtml src/**/*.html",
        "lint:css": "stylelint src/**/*.css",
        "lint:js": "eslint **/*.{js,svelte,ts}"
    },
    "devDependencies": {
        "@linthtml/linthtml": "^0.9.5",
        "@linthtml/linthtml-config-recommended": "^0.1.0",
        "@sveltejs/adapter-static": "^2.0.3",
        "@sveltejs/kit": "^1.24.0",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "autoprefixer": "^10.4.15",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-svelte": "^2.33.0",
        "prettier": "^3.0.2",
        "prettier-plugin-svelte": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.3",
        "stylelint": "^15.10.3",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-config-tailwindcss": "^0.0.7",
        "svelte": "^4.2.0",
        "svelte-check": "^3.5.1",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.1.6",
        "vite": "^4.4.9",
        "vite-plugin-tailwind-purgecss": "^0.1.3"
    }
}
